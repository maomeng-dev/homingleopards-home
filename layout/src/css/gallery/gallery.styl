@import "../base.styl"

.content
  padding-top: 80px

.album

  .album-list
    display: flex
    justify-content: space-between

  .album-item
    width: 415px
    overflow: hidden

    &:hover,
    &:focus,
    &.active
      .cover
        span
          bottom: 0
          opacity: 1

    .title
      font-size: 24px
      line-height: 1.5

    .subtitle
      margin-bottom: 16px
      color: #7f7e7e
      font-size: 14px
      line-height: 1

    .cover
      position: relative

      img
        display: block
        width: 100%

      span
        position: absolute
        right: 0
        left: 0
        bottom: -108px
        display: block
        height: 60px
        padding: 24px 18px
        background-color: rgba(255, 180, 0, .8)
        color: #3c2d22
        font-size: 14px
        line-height: 1.43
        overflow: hidden;
        opacity: 0
        transition: all .2s
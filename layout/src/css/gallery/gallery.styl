@import "../base.styl"

.content
  padding-top: 80px

.album
  margin: 40px auto 62px auto

  .album-list
    display: flex
    justify-content: space-between

  .album-item
    width: 32.5%
    overflow: hidden

    &:hover,
    &:focus,
    &.active
      .cover
        span
          bottom: 0
          opacity: 1

    .title
      font-size: 24px
      line-height: 1.5

    .subtitle
      margin-bottom: 16px
      color: #7f7e7e
      font-size: 14px
      line-height: 1

    .cover
      position: relative

      img
        display: block
        width: 100%

      span
        position: absolute
        right: 0
        left: 0
        bottom: -108px
        display: block
        height: 60px
        padding: 24px 18px
        background-color: rgba(255, 180, 0, .8)
        color: #3c2d22
        font-size: 14px
        line-height: 1.43
        overflow: hidden;
        opacity: 0
        transition: all .2s

  .album-desc
    width: 1024px
    margin: 24px auto 0 auto
    color: #888
    font-size: 16px
    line-height: 1.5

.gallery
  margin-bottom: 130px

  .gallery-type
    height: 58px
    margin-bottom: 20px
    border-bottom: 2px solid #313131

    li
      display: inline-block

      a
        display: block
        width: 105px
        height: 18px
        padding: 20px 0
        font-size: 18px
        text-align: center

      &:first-child
        a
          width: 144px

      &.active
        a
          color: #fff
          border-bottom: 2px solid #ffb400

  .gallery-search
    padding-top: 10px
    font-size: 0

    input
      width: 200px
      height: 16px
      padding: 10px
      background-color: #131313
      border: none
      color: #888
      font-size: 16px
      line-height: 1
      box-sizing: content-box
      outline: none
      vertical-align: middle

    button
      width: 36px
      height: 36px
      background-color: #ffb400
      border: none
      color: #3e2b00
      line-height: 36px
      font-size: 20px
      text-align: center
      outline: none
      cursor: pointer
      vertical-align: middle
      transition: background .2s

      &:hover,
      &:focus
        background-color: #ffde7b

  .gallery-list
    display: flex
    flex-wrap: wrap
    justify-content: space-between

    li
      position: relative
      width: 206px
      height: 206px
      margin-bottom: 9px
      overflow: hidden
      cursor: default

      &:hover,
      &:focus
        div
          opacity: 1
          transform: scale(1)

      img
        display: block
        width: 100%
        height: 100%

      div
        position: absolute
        right: 14px
        bottom: 14px
        left: 14px
        height: 50px
        padding: 8px 10px 10px 10px
        background-color: rgba(255, 180, 0, .9)
        color: #000
        opacity: 0
        transform: scale(.8)
        transition: all .2s

        .title
          display: block
          margin-bottom: 2px
          font-size: 16px
          text-align: center

        .desc
          display: block
          height: 40px
          font-size: 14px
          line-height: 20px
          overflow: hidden




@import "../base.styl"

@css {
  /* http://meyerweb.com/eric/tools/css/reset/
   v2.0 | 20110126
   License: none (public domain)
*/

  html, body, div, span, applet, object, iframe,
  h1, h2, h3, h4, h5, h6, p, blockquote, pre,
  a, abbr, acronym, address, big, cite, code,
  del, dfn, em, img, ins, kbd, q, s, samp,
  small, strike, strong, sub, sup, tt, var,
  b, u, i, center,
  dl, dt, dd, ol, ul, li,
  fieldset, form, label, legend,
  table, caption, tbody, tfoot, thead, tr, th, td,
  article, aside, canvas, details, embed,
  figure, figcaption, footer, header, hgroup,
  menu, nav, output, ruby, section, summary,
  time, mark, audio, video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
  }
  /* HTML5 display-role reset for older browsers */
  article, aside, details, figcaption, figure,
  footer, header, hgroup, menu, nav, section {
    display: block;
  }
  body {
    line-height: 1;
  }
  ol, ul {
    list-style: none;
  }
  blockquote, q {
    quotes: none;
  }
  blockquote:before, blockquote:after,
  q:before, q:after {
    content: '';
    content: none;
  }
  table {
    border-collapse: collapse;
    border-spacing: 0;
  }
}

/* page commons */
html,
body
  height: 100%
  padding: 0
  margin: 0
  color: #e2e2e2
  background-color: #050505
  font-family: $font-sans

.pull-left
  float: left !important

.pull-right
  float: right !important

.clearfix
  &:after
    content: ''
    display: block
    width: 0
    height: 0
    font-size: 0
    clear: both
    overflow: hidden

/* links */
a
  color: #888
  text-decoration: none
  transition: color .5s

a:focus,
a:hover,
a:active
  color: #fff

/* header */
header
  position: absolute
  top: 0
  right: 0
  left: 0
  height: 80px
  background-color: rgba(0, 0, 0, .7)
  z-index: 100

  .header-logo
    position: relative
    float: left
    width: 200px
    height: 100%
    margin-right: 20px
    background-color: #ffb400
    color: #000
    font-size: 35px
    font-weight: bold
    text-align: center
    line-height: 80px

  .header-menu
    float: right
    height: 80px
    padding-right: 50px
    line-height: 80px

    li
      display: inline-block
      font-size: 18px
      vertical-align: top

      a
        display: inline-block
        padding: 0 20px
        color: #fff
        
      .active
        color: #ffd013
        cursor: default

    .header-layer-btn
      position: relative
      cursor: pointer

      &:focus,
      &:hover,
      &:active
        .header-layer-wrap
          display: block

    .header-layer-wrap
      position: absolute
      left: 50%
      top: 65px
      display: none
      padding: 5px
      background-color: #fff
      border-radius: 4px
      box-shadow: 0 0 5px 0 rgba(0, 0, 0, .5)
      transform: translateX(-50%)

      &:after
        content: ''
        position: absolute
        top: -12px
        left: 50%
        display: block
        width: 0
        height: 0
        border: 6px solid transparent
        border-bottom-color: #fff;
        transform: translateX(-50%)

      img
        display: block


/* footer */
footer
  padding: 40px 0
  color: #888
  font-size: 16px
  line-height: 1.5
  background-color: #171717

  p
    line-height: 1.5

  .footer-link
    height: 54px
    line-height: 54px

    li
      display: inline-block

      a
        display: inline-block
        padding: 0 20px

      .fa
        font-size: 20px

    .footer-layer-btn
      position: relative
      cursor: pointer

      &:focus,
      &:hover,
      &:active
        .footer-layer-wrap
          display: block

    .footer-layer-wrap
      position: absolute
      left: 50%
      bottom: 55px
      display: none
      padding: 5px
      background-color: #fff
      border-radius: 4px
      box-shadow: 0 0 5px 0 rgba(0, 0, 0, .5)
      transform: translateX(-50%)

      &:after
        content: ''
        position: absolute
        bottom: -12px
        left: 50%
        display: block
        width: 0
        height: 0
        border: 6px solid transparent
        border-top-color: #fff;
        transform: translateX(-50%)

      img
        display: block

  .footer-copyright
    color: #444
    font-size: 12px

@media (max-width: 768px)
  footer
    padding: 20px 0 10px 0

    .footer-link
      float: none !important
      height: 24px
      margin-bottom: 10px
      font-size: 14px
      line-height: 24px

      li
        margin: 0 5px

        .fa
          font-size: 16px

    .footer-copyright
      float: none !important
      text-align: right

/* wrap */
.page-wrap
  position: relative
  max-width: 1280px
  padding: 0 50px
  margin: 0 auto

/* totop */
.page-totop
  position: fixed
  right: 20px
  bottom: 20px
  display: block
  width: 46px
  height: 46px
  border: 2px solid
  border-color: rgba(255, 255, 255, .2)
  border-radius: 4px
  color: rgba(255, 255, 255, .3)
  text-align: center
  text-decoration: none
  line-height: 46px
  background-color: rgba(255, 255, 255, .2)
  cursor: pointer
  z-index: 1000
  overflow: hidden
  opacity: .5
  transition: border-color .5s, color .5s

  &:focus,
  &:hover,
  &:active
    border-color: rgba(255, 255, 255, .4)
    color: rgba(255, 255, 255, .6)

  i
    font-size: 24px

  span
    font-size: 0

@import "../base.styl"

$keyframe-pointdown = pointdown
@keyframes {$keyframe-pointdown}
  0%
    padding-bottom: 0
  50%
    padding-bottom: 10px
  100%
    padding-bottom: 0

html,
body
  height: 100%
  color: #fff
  background-color: #000
  font-family: $font-sans

footer
  display: none

.content
  height: 100%
  padding-top: 100vh

  h2
    margin: 70px 0
    font-size: 45px
    text-align: center

.wrap
  position: relative
  max-width: 1280px
  padding: 0 10px
  margin: 0 auto

.banner
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-image: url($imgDir/page/about-north-chinese-leopards/banner.jpg)
  background-size: cover
  background-position: 50% 50%
  z-index: 10

  h1
    position: absolute
    top: 28%
    right: 0
    left: 0
    color: #ffc52d
    font-size: 90px
    font-family: "PingFangSC-Medium", $font-sans
    text-align: center

  p
    position: absolute
    top: 50%
    font-size: 24px
    line-height: 35px

  i
    position: absolute
    bottom: 12%
    left: 50%
    transform: translateX(-50%)
    animation-name: $keyframe-pointdown;
    animation-duration: 2s;
    animation-timing-function: ease-in-out;
    animation-iteration-count: infinite;

  .wrap
    height: 100%
    z-index: 1

  .mask
    position: absolute
    top: 50%
    right: 0
    bottom: 0
    left: 0
    background: -webkit-gradient(linear, left top, right top, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 1)));
    background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    background: -moz-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    background: -o-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    background: -ms-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0,1));
    background: linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    background-color: rgba(0, 0, 0, 0);

.distribution
  p
    color: #777c80
    font-size: 24px
    line-height: 35px

  .distribution-slide
    position: relative
    width: 100%
    height: 720px
    margin-bottom: 70px
    overflow: hidden

    *
      outline: none !important

    .slick-dots
      position: absolute
      right: 0
      bottom: 30px
      left: 0
      text-align: center

      li
        display: inline-block

        &.slick-active
          button
            opacity: 1

        button
          display: block
          width: 15px
          height: 15px
          margin: 0 12px
          padding: 0
          border: none
          background-color: #fff
          border-radius: 50%
          font-size: 0
          opacity: .5
          cursor: pointer


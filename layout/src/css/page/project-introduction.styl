@import "../base.styl"

.content
  background-color: #000

  h2
    height: 40px
    margin-bottom: 30px
    color: #d1d1d1
    font-size: 40px
    text-align: center


  .block
    margin-bottom: 60px

.page-text
  color: #a6a6a6
  font-size: 16px
  line-height: 1.375

/* page blocks */
.banner
  .page-wrap
    position: relative
    display: flex
    align-items: center
    height: 445px
    background: url($imgDir/page/project-introduction/banner.png) 50% 50% no-repeat
    background-size: 1280px 445px

  .banner-text
    width: 560px
    color: #a6a6a6
    font-size: 14px
    line-height: 1.35

    p
      padding: 10px 0

  .banner-photo
    position: absolute
    top: 60px
    right: 170px
    width: 210px
    height: 253px

.intro
  .intro-phase
    margin-bottom: 60px

    .intro-phase-list
      display: flex
      flex-wrap: nowrap
      justify-content: space-between

    .intro-phase-item
      position: relative
      width: 31.25%

      img
        width: 100%

      h4
        position: absolute
        bottom: 80px
        left: 50%
        margin: auto
        height: 20px
        padding: 16px 30px
        color: #000
        font-size: 20px
        text-align: center
        white-space: nowrap
        background-color: #ffb400
        transform: translateX(-50%)

      p
        position: absolute
        right: 0
        bottom: 10px
        left: 0
        padding: 0 35px

    .intro-phase-text
      padding: 25px 135px

  .intro-plan
    display: flex
    flex-wrap: nowrap
    align-items: flex-end
    margin-bottom: 60px

    .intro-plan-bar
      flex-grow: 1
      flex-shrink: 1
      max-width: 840px
      min-width: 680px
      margin-bottom: 80px

      .bar-list
        display: flex
        align-items: flex-end
        justify-content: space-around

      .bar-item
        position: relative
        width: 200px

        &:first-child
          width: 270px

        .popup
          position: relative
          padding: 25px
          margin-bottom: 44px
          color: #a6a6a6
          font-size: 14px
          line-height: 1.5
          background-color: #0f0f0f
          border-radius: 10px

          &:after
            content: ""
            position: absolute
            right: 0
            bottom: -20px
            left: 0
            display: block
            width: 0
            height: 0
            margin: auto
            font-size: 0
            border: 10px solid
            border-color: #0f0f0f transparent transparent transparent

        .dot
          position: absolute
          right: 0
          bottom: -12px
          left: 0
          display: block
          width: 20px
          padding: 2px
          margin: auto
          background-color: #fa0
          border-radius: 50%

          &:after
            content: ""
            display: block
            width: 16px
            height: 16px
            background-color: #ffd500
            border: 2px solid #000
            border-radius: 50%

        .text
          position: absolute
          right: 0
          bottom: -46px
          left: 0
          display: block
          height: 18px
          color: #ffb400
          font-size: 18px
          text-align: center

      .bar-border
        height: 2px
        margin: 0 30px
        background-color: #575757
        border-radius: 2px

    .intro-plan-img
      flex-grow: 0
      flex-shrink: 1
      align-self: center

      img
        display: block
        width: 100%


  .intro-slide
    display: flex
    flex-wrap: nowrap

    .intro-slide-container
      flex-grow: 0
      flex-shrink: 0
      width: 480px
      margin-right: 40px

    .intro-slide-detail
      h4
        height: 24px
        padding-bottom: 25px
        color: #ffb400
        font-size: 24px

      p
        margin-top: 25px

        &:first-child
          margin-top: 0



.progress
  .progress-tab
    display: flex
    justify-content: center
    margin-bottom: 50px

    li
      width: 198px
      height: 48px
      line-height: 48px
      text-align: center
      border: solid #ffb400
      border-width: 1px 1px 1px 0
      background-color: #000

      &:first-child
        border-width: 1px

      &.active
        background-color: #ffb400

        a
          color: #000

      a
        display: block
        width: 100%
        height: 100%
        color: #fff
        font-size: 18px

  .progress-content
    li

      img
        width: 42%

      div
        width: 56%

      p
        margin-top: 25px

        &:first-child
          margin-top: 0

/* responsive styles */
@media (max-width: 1024px)
  .banner
    .page-wrap
      flex-direction: column-reverse
      height: auto
      background: none

    .banner-text
      width: 100%

    .banner-photo
      position: static
      top: auto
      right: auto

  .intro
    .intro-phase
      .intro-phase-list
        flex-wrap: wrap

      .intro-phase-item
        width: 100%
        margin-bottom: 10px

      .intro-phase-text
        padding: 0

    .intro-plan
      overflow: auto

      .intro-plan-bar
        min-width: 720px

    .intro-slide
      flex-wrap: wrap

      .intro-slide-container
        width: 100%
        margin-bottom: 10px

      .intro-slide-item
        img
          width: 100%
